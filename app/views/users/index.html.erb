<% title "All Users" %>
<% select_tab "Users" %>
<% select_sub_tab "All Users" %>

<% sub_tabs do %>
	<%= sub_tab "All Users", users_path %>
	<%= sub_tab "New User", new_user_path %>
<% end %> 

<table style="width:100%;" border="1">
	<tr id="headers">
		<td>Name </td>
		<td>Email </td>
		<td>Role </td>
		<td colspan="3"></td>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.name %> </td>
			<td><%= user.email %> </td>
			<td><%= user.role %> </td>
			<td><%= link_to 'Show', user_path(user) %> </td>
			<td><%= link_to 'Edit', edit_user_path(user) %> </td>
			<td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
