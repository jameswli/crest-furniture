<% title "All Inventory Items" %>
<% select_tab "Inventory" %>
<% select_sub_tab "All Items" %>

<% sub_tabs do %>
	<%= sub_tab "Display Style", inventory_style_path %>
	<%= sub_tab "All Items", inventory_item_path %>
	<%= sub_tab "Add Item", new_inventory_item_path %>
<% end %>

<table style = "width:100%;" border = "1">
	<tr id = "headers" >
		<td>Serial_Number </td>
		<td>Condition </td>
		<td>Status </td>
		<td>Time_Rented </td>
		<td colspan="3"></td>
	</tr>
	<% @items.each do |item| %>
	<tr>
		<td><%= item.serial_number %></td>
		<td><%= item.condition %></td>
		<td><%= item.status %></td>
		<td><%= item.inventory_style_id %></td>
		<td><%= link_to 'Edit', edit_inventory_item_path(item) %> </td>
		<td><%= link_to 'Delete', item, method: :delete,data: { confirm: 'Are you sure?' } %> </td>
		</tr>
	<% end %>
</table>