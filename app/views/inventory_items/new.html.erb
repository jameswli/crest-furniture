<% title "New Item" %>
<% select_tab "Inventory" %>
<% select_sub_tab "Add Item" %>

<% sub_tabs do %>
  <%= sub_tab "Display Style", inventory_style_path(@style, :id => @style.id) %>
  <%= sub_tab "Edit Style", edit_inventory_style_path(@style, :id => @style.id) %>
  <%= sub_tab "Add Item", new_inventory_item_path(@style) %>
<% end %>


<%= form_for @item do |s| %>
  <%= s.label :serial_number, :class => 'field required' %>
  <%= s.text_field :serial_number %>
  <br />
  <%= s.label :condition, :class => 'field required' %>
  <%= s.text_field :condition %>
  <br />
  <%= s.label :status, :class => 'field required' %>
  <%= s.text_field :status %>
  <br />
  <%= s.hidden_field :inventory_style_id, value: @style.id %>
  <br />
  <%= s.submit %>
<% end %>  